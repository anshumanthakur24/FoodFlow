# Environment variables tailored for running the ML service inside Docker Compose
# Mongo is available on the internal docker network via the "mongo" service
MONGODB_URI=mongodb://mongo:27017/food_net
MONGODB_DB_NAME=food_net

# Directory inside the container where training/inference artifacts are written
ML_OUTPUT_DIR=artifacts

# Unsupervised model hyperparameters
ML_KMEANS_CLUSTERS=6
ML_IFOREST_CONTAMINATION=0.05
ML_FEATURE_FREQ=M
ML_RANDOM_STATE=42

# Optional enrichment datasets (kept relative to /app)
FESTIVAL_FEATURES_CSV=data/festival_features.csv
INCOME_FEATURES_CSV=data/income_features.csv

# Node.js inference gateway
ML_SERVER_PORT=5050
PYTHON_BIN=/opt/venv/bin/python
ROUTE_SERVICE_URL=https://router.project-osrm.org
